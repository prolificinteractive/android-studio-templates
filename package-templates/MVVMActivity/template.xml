<?xml version="1.0"?>
<template
    format="4"
    revision="2"
    name="Activity"
    description="Creates an MVVM package with an activity and its View/ViewModel"
    minApi="3"
    minBuildApi="3">

    <category value="Mvvm" />

    <parameter
        id="className"
        name="Activity Name"
        type="string"
        constraints="activity|nonempty|unique"
        default="BlankActivity"
        help="The name of the activity class to create" />

    <parameter
        id="activityName"
        name="Activity Layout Name"
        type="string"
        constraints="layout|nonempty|unique"
        default="activity_blank"
        suggest="activity_${classToResource(className)}"
        help="The name of the layout to create" />

    <parameter
        id="Name"
        name="Name"
        type="string"
        constraints="class|nonempty|unique"
        default="Blank"
        visibility="false"
        suggest="${underscoreToCamelCase(classToResource(className))}"
        help="The name of the view model to create" />

    <parameter
        id="packName"
        name="Package Name"
        type="string"
        constraints="nonempty|unique"
        default="blank"
        visibility="false"
        suggest="${classToResource(className)}"
        help="The name of the package to create" />

    <parameter
        id="includeComponent"
        name="Include activity component?"
        type="boolean"
        default="true"
        help="Add dagger 2 component to activity" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
